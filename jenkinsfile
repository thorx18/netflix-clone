@Library('my-lib') _
pipeline {
    agent { label 'bro' }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/thorx18/netflix-clone.git'
            }
        }

        stage('Build Docker Image') {
            steps {
               echo "docker image is building"
               dockerBuild("netflix-clone:latest")
            }
        }
        stage("Login To DockerHub") {
            steps {
               dockerLoginPush("netflix-clone:latest")
        }
      }
    }
  }
